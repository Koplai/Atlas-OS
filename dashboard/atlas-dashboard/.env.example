# Copy to .env and adjust.
# Database (docker-compose uses service name `db`)
DATABASE_URL=postgresql://atlas:atlas@db:5432/atlas

# Optional: protect /api/* (recommended)
ATLAS_DASHBOARD_TOKEN=change-me

# Postgres container settings (used by docker-compose)
POSTGRES_USER=atlas
POSTGRES_PASSWORD=atlas
POSTGRES_DB=atlas

# Local STT (Whisper in Docker)
STT_URL=http://stt-whisper:9000/asr
STT_FILE_FIELD=audio_file
STT_LANGUAGE=es
STT_TIMEOUT_MS=120000
STT_MODEL=small
STT_ENGINE=openai_whisper
